
<html> 
  <head>
    <title> {{title}}</title>
  </head>
  <body>
    <h1>{{title}}</h1>
    <p>{{message}}</p>
    <form method="post" action="/login">
      <input type="text" name="username" value="{{user.username}}" style="margin-top: 10px;"><br>
      {% if (error.username) %}
        <div style="color: red;">{{error.username.msg}}</div>
      {% endif %}
      <input type="password" name="password" style="margin-top: 10px;"><br>
      {% if (error.password) %}
        <div style="color: red;">{{error.password.msg}}</div>
      {% endif %}
      <input type="password" name="cpassword" style="margin-top: 10px;"><br>
      {% if (error.cpassword) %}
        <div style="color: red;">{{error.cpassword.msg}}</div>
      {% endif %}
      <input type="submit" name="submit" value="submit" style="margin-top: 10px;">
    </form>
  </body>
</html>
 